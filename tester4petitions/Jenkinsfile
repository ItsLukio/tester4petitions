pipeline {
    agent any

    stages {
        stage('Get Project') {
            steps {
                git branch: 'master', url: 'https://github.com/ItsLukio/tester4petitions.git'
            }
        }
        stage('Debug Workspace') {
            steps {
                sh 'ls -la'
            }
        }
        stage('Set Permissions') {
            steps {
                sh 'chmod +x mvnw'
            }
        }
        stage('Build') {
            steps {
                sh './mvnw clean'
                sh './mvnw compile'
            }
        }
        stage('Test') {
            steps {
                sh 'make check || true'
                junit '**/target/*.xml'
            }
        }
        stage('Package') {
            steps {
                sh './mvnw package'
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
        }
    }
}
