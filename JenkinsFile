pipeline {
    agent any

    stages {
        stage('Get Project') {
            steps {
                git 'https://github.com/ItsLukio/tester4petitions.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean'
                sh 'mvn dependency:copy-dependencies'
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                sh 'make check || true'
                junit '**/target/*.xml'
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
        }
    }
}
